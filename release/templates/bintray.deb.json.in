{
  "package": {
    "name": "{{CI_APPNAME}}",
    "repo": "deb",
    "subject": "itchio"
  },

  "version": {
    "name": "{{CI_VERSION}}",
    "desc": "v{{CI_VERSION}}",
    "released": "{{CI_RELEASE_DATE}}",
    "vcs_tag": "v{{CI_VERSION}}",
    "gpgSign": true
  },

  "files": [
    {
      "includePattern": "packages/(.*\{{DEB_ARCH}}.deb)",
      "uploadPattern": "$1",
      "matrixParams": {
        "override": true,
        "deb_distribution": "wheezy,jessie,stretch,precise,trusty,vivid,wily,xenial,yakkety,rafaela",
        "deb_component": "main",
        "deb_architecture": "{{DEB_ARCH}}"
      }
    }
  ],
  "publish": {{CI_PUBLISH}}
}
